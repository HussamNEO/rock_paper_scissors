import random

computer_number = random.randint(1, 3)
computer_choice = None

if computer_number == 1:
    computer_choice = "rock"

elif computer_number == 2:
    computer_choice = "paper"

else:
    computer_choice = "scissors"

print(
    "...rock...\n"
    "...paper...\n"
    "...scissors..."
)

my_choice = input("(Enter your choice): ")

if my_choice == "rock" or my_choice == "paper" or my_choice == "scissors":

    print("(Computer choice): %s" % (computer_choice))

    if my_choice == computer_choice:
        print("Draw")

    elif my_choice == "rock" and computer_choice == "scissors":
        print("I win")

    elif my_choice == "paper" and computer_choice == "rock":
        print("I win")

    elif my_choice == "scissors" and computer_choice == "paper":
        print("I win")

    else:
        print("computer won")

else:
    print("You didn't enter one of the listed choices")

